<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:layout_editor_absoluteY="89dp">

    <TextView
        android:id="@+id/over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="241dp"
        android:layout_marginRight="241dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="GAME OVER"
        android:textColor="#000000"
        android:textSize="80dp"
        app:layout_constraintBottom_toTopOf="@+id/repeat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/repeat"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:background="@color/colorAccent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/close"
        app:layout_constraintEnd_toEndOf="@+id/over"
        app:layout_constraintStart_toStartOf="@+id/over"
        app:layout_constraintTop_toBottomOf="@+id/over"
        app:srcCompat="@drawable/repeat" />

    <ImageButton
        android:id="@+id/close"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="34dp"
        android:background="@color/colorAccent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/repeat"
        app:layout_constraintStart_toStartOf="@+id/repeat"
        app:layout_constraintTop_toBottomOf="@+id/repeat"
        app:srcCompat="@drawable/x" />

</android.support.constraint.ConstraintLayout>